generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Merchant {
  id            String   @id @default(cuid())
  businessName  String
  ownerName     String   // From Google account
  email         String   // From Google account (not unique - one user can have multiple venues)
  phone         String
  contactPerson String?  // Contact person name for venue
  venueType     String
  capacity      Int
  provinsi      String
  kabupaten     String
  kecamatan     String?
  kelurahan     String?
  alamatLengkap String
  kodePos       String?
  latitude      Float?
  longitude     Float?
  openingHour   String?  // e.g. "09:00"
  closingHour   String?  // e.g. "22:00"
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  license       License?
}

model License {
  id                String    @id @default(cuid())
  venue             Merchant  @relation(fields: [venueId], references: [id], onDelete: Cascade)
  venueId           String    @unique
  tier              Int       // 1, 2, 3, 4, or 5
  price             Int       // amount in IDR
  status            String    @default("unpaid") // "unpaid", "paid"
  paidAt            DateTime?
  midtransId        String?   // order_id from Midtrans
  transactionId     String?   // transaction_id from Midtrans
  paymentType       String?   // e.g. "credit_card", "bank_transfer", "gopay"
  transactionStatus String?   // e.g. "capture", "settlement"
  transactionTime   DateTime? // when payment was made
  grossAmount       String?   // amount string from Midtrans
  bank              String?   // bank name if bank transfer
  vaNumber          String?   // VA number if bank transfer
  cardType          String?   // card type if credit card
  maskedCard        String?   // masked card number
  createdAt         DateTime  @default(now())
}

model User {
  id             String        @id @default(cuid())
  email          String        @unique
  name           String?
  image          String?
  phone          String?
  billingAddress String?
  companyName    String?
  companyRole    String?
  lastLoginAt    DateTime?
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  activities     ActivityLog[]
}

model ActivityLog {
  id          String   @id @default(cuid())
  user        User     @relation(fields: [userEmail], references: [email], onDelete: Cascade)
  userEmail   String
  action      String   // e.g. "LOGIN", "LOGOUT", "VENUE_CREATE", "VENUE_UPDATE", "VENUE_DELETE", "LICENSE_CREATE", "PAYMENT_SUCCESS"
  description String   // Human-readable description
  metadata    Json?    // Additional data like venueId, licenseId, etc.
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([userEmail])
  @@index([createdAt])
}

model Ticket {
  id          String          @id @default(cuid())
  ticketNo    String          @unique // e.g. "TKT-20260213-001"
  userEmail   String
  subject     String
  category    String          // e.g. "payment", "license", "technical", "other"
  priority    String          @default("normal") // "low", "normal", "high", "urgent"
  status      String          @default("open") // "open", "waiting_admin", "admin_replied", "waiting_user", "resolved", "closed"
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt
  messages    TicketMessage[]

  @@index([userEmail])
  @@index([status])
  @@index([createdAt])
}

model TicketMessage {
  id        String   @id @default(cuid())
  ticket    Ticket   @relation(fields: [ticketId], references: [id], onDelete: Cascade)
  ticketId  String
  sender    String   // "user" or "admin"
  senderEmail String
  message   String
  createdAt DateTime @default(now())

  @@index([ticketId])
}
